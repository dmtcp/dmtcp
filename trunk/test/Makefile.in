@SET_MAKE@
LN_S=@LN_S@
CC=@CC@
CXX=@CXX@
CFLAGS=@CFLAGS@
CXXFLAGS=@CXXFLAGS@
HAS_READLINE=@HAS_READLINE@
HAS_MPICH=@HAS_MPICH@
MPICH_MPICC=@MPICH_MPICC@
PWD=$(shell pwd)

TESTS=$(basename $(wildcard *.c *.cpp echoserver/*.c))

tests: $(TESTS)

clean distclean:
	rm -f $(TESTS) *.pyc dmtcpaware[0-9]-{static,dynamic}

readline: readline.c
ifeq ($(HAS_READLINE),yes)
	$(CC) -o $@ $< $(CFLAGS) -lreadline -lhistory
else
	#$<: required libraries missing, skipping test
endif

hellompi: hellompi.c
ifeq ($(HAS_MPICH),yes)
	$(MPICH_MPICC) -o $@ $< $(CFLAGS) 
else
	#$<: required libraries missing, skipping test
endif

DMTCPAWARELIB=$(PWD)/../dmtcp/src/libdmtcpaware

dmtcpaware%: dmtcpaware%.c
	-$(CC) -o $@-static $< $(CFLAGS) $(DMTCPAWARELIB).a
	-$(CC) -o $@-dynamic $< $(CFLAGS) $(DMTCPAWARELIB).so
	-$(LN_S) $@-static $@

%: %.c
	$(CC) -o $@ $< $(CFLAGS)

%: %.cpp
	$(CXX) -o $@ $< $(CXXFLAGS)


