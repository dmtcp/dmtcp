@SET_MAKE@
LN_S=@LN_S@
CC=@CC@
CXX=@CXX@
CFLAGS=@CFLAGS@
CFLAGS+=-Wl,--export-dynamic
CXXFLAGS=@CXXFLAGS@
HAS_READLINE=@HAS_READLINE@
HAS_MPICH=@HAS_MPICH@
MPICH_MPICC=@MPICH_MPICC@
PWD=$(shell pwd)

TESTS=$(basename $(wildcard *.c *.cpp echoserver/*.c))

tests: $(TESTS)

clean distclean:
	rm -f $(TESTS)

readline: readline.c
ifeq ($(HAS_READLINE),yes)
	$(CC) -o $@ $< $(CFLAGS) -lreadline -lhistory
else
	#$<: required libraries missing, skipping test
endif

hellompi: hellompi.c
ifeq ($(HAS_MPICH),yes)
	$(MPICH_MPICC) -o $@ $< $(CFLAGS) 
else
	#$<: required libraries missing, skipping test
endif

dmtcp-aware-api: dmtcp-aware-api.c
	test ! -f ../dmtcp/src/libdmtcpaware.so ||\
		$(CC) -o $@ $< $(CFLAGS) $(PWD)/../dmtcp/src/libdmtcpaware.so

%: %.c
	$(CC) -o $@ $< $(CFLAGS)

%: %.cpp
	$(CXX) -o $@ $< $(CXXFLAGS)


